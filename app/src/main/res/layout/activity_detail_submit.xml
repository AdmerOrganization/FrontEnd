<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSubmit">
    <Button
        android:text="get pdf"
        android:textColor="@color/blue_learning"
        android:id="@+id/detailHomeworkGetPdf"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailHomework"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"></Button>
    <TextView
        android:id="@+id/detailHomework"
        android:layout_width="135dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Homework"
        android:textColor="@color/blue_learning"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="@drawable/border_shadow_white_background"
        android:elevation="10dp"
        android:minLines="1"
        android:maxLines="1"
        android:id="@+id/detailTitleET"
        android:hint="title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/blue_learning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailHomeworkGetPdf"></TextView>

    <TextView
        android:background="@drawable/border_shadow_white_background"
        android:elevation="10dp"
        android:minLines="2"
        android:maxLines="5"
        android:id="@+id/detailDescET"
        android:hint="Desc"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/blue_learning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailTitleET"></TextView>

    <TextView
        android:id="@+id/detailDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailDescET"
        android:text="Deadline"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/blue_learning"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"/>
    <TextView
        android:background="@drawable/border_shadow_white_background"
        android:elevation="10dp"
        android:minLines="1"
        android:maxLines="1"
        android:id="@+id/detailDeadlineET"
        android:hint="title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/blue_learning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailDeadline"></TextView>
    <Button
        android:text="chose pdf"
        android:textColor="@color/blue_learning"
        android:id="@+id/detailHomeworkPdfSelection"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailDeadlineET"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"></Button>

    <Button
        android:id="@+id/detailSubmitHomework"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/blue_learning"
        android:text="ok"
        app:layout_constraintTop_toBottomOf="@+id/detailHomeworkPdfSelection"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>