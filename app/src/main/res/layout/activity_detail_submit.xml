<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSubmit">

    <Button
        android:id="@+id/detailHomeworkGetPdf"
        android:layout_width="164dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#4066E0"
        android:text="Download\nquestions"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailDeadlineET"></Button>

    <TextView
        android:id="@+id/detailHomework"
        android:layout_width="135dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Homework"
        android:textColor="#22277A"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/detailDescET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#B9BFFF"
        android:background="@drawable/border_shadow_white_background"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="Desc"
        android:maxLines="5"
        android:minLines="2"
        android:textColor="#22277A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailHomework"></TextView>

    <TextView
        android:id="@+id/detailDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Deadline"
        android:textColor="#22277A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailDescET" />

    <TextView
        android:id="@+id/detailDeadlineET"
        android:layout_width="184dp"
        android:layout_height="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="deadline"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="#22277A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/detailDeadline"
        app:layout_constraintTop_toBottomOf="@+id/detailDescET"></TextView>

    <Button
        android:id="@+id/detailHomeworkPdfSelection"
        android:layout_width="164dp"
        android:layout_height="57dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#4066E0"
        android:text="Upload\nAnswer"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/detailHomeworkGetPdf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailDeadline"></Button>

    <Button
        android:id="@+id/detailSubmitHomework"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#22277A"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailHomeworkGetPdf" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:textSize="18sp"
        android:text="Description"
        android:textColor="#22277A"
        app:layout_constraintBottom_toTopOf="@+id/detailDescET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailHomework"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>