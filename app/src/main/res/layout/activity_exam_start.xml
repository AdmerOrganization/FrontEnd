<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamStart">

    <ListView
        android:id="@+id/questionsListView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <Button
        android:onClick="exam_end"
        android:text="FINISH"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/darkRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionsListView"></Button>

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="@color/darkRed"
        android:background="@color/white"
        android:elevation="10dp"
        android:text="23:59"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/questionsListView"
        app:layout_constraintTop_toTopOf="@+id/questionsListView" />
</androidx.constraintlayout.widget.ConstraintLayout>